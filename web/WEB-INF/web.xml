<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>filter.HomeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>filter.adminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
<!--    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/PageSelect</url-pattern>
    </filter-mapping>-->
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/AdminPage</url-pattern>
    </filter-mapping>
    <servlet>
    <servlet-name>AddNewDishServlet</servlet-name>
    <servlet-class>controller.AddNewDishServlet</servlet-class>
    <multipart-config>
        <location>/some/directory/on/server/to/save/file</location>
        <max-file-size>20848820</max-file-size>
        <max-request-size>418018841</max-request-size>
        <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
</servlet>
<servlet-mapping>
    <servlet-name>AddNewDishServlet</servlet-name>
    <url-pattern>/AddNewDishServlet</url-pattern>
</servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
